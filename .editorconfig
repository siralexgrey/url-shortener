# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,js,tsx,jsx}]
indent_size = 2
max_line_length = 140

# HTML files
[*.html]
indent_size = 2
max_line_length = 140

# CSS, SCSS, LESS files
[*.{css,scss,less,sass}]
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 2

# Package.json (special formatting)
[package.json]
indent_size = 2

# Makefile (must use tabs)
[Makefile]
indent_style = tab

# Go files (if any)
[*.go]
indent_style = tab
indent_size = 4
